; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = space
indent_size = 4

[**.{js,json,scss,yml}]
indent_style = space
indent_size = 2

[composer.json]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
